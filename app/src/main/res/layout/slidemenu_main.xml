<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/slidemenu_width"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_rectangle_full_broad"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/headview_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/def_head_img"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/shape_rectangle_white_broad"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="用户名"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/head_broad">

    </View>

    <FrameLayout
        android:id="@+id/content_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>